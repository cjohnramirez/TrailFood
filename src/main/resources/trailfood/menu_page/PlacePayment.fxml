<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu_page.PlacePaymentController">
   <children>
      <Label text="Select Payment Method">
         <font>
            <Font name="DM Sans Medium" size="12.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <Label fx:id="cashPaymentMethodLabel" onMouseClicked="#setPaymentMethodLabelOnAction" style="-fx-background-color: -color-success-2;" text="Cash">
               <font>
                  <Font name="DM Sans Regular" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="cardPaymentMethodLabel" onMouseClicked="#setPaymentMethodLabelOnAction" style="-fx-background-color: e8e8e8;" text="Card">
               <font>
                  <Font name="DM Sans Regular" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="digitalPaymentMethodLabel" onMouseClicked="#setPaymentMethodLabelOnAction" style="-fx-background-color: e8e8e8;" text="Digital Payment">
               <font>
                  <Font name="DM Sans Regular" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <Label text="Set Amount of Cash">
         <font>
            <Font name="DM Sans Medium" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="paymentAmountTextField" prefHeight="30.0" prefWidth="221.0" />
      <Label fx:id="paymentAmountStatusLabel" style="-fx-text-fill: -color-danger-5;">
         <font>
            <Font name="DM Sans Regular" size="12.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <Label fx:id="placePaymentLabel" onMouseClicked="#setPlacePaymentOnAction" style="-fx-background-color: -color-success-2;" text="Place Payment">
               <font>
                  <Font name="DM Sans Regular" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="placePaymentCancelLabel" onMouseClicked="#setPlacePaymentCancelLabelOnAction" style="-fx-background-color: -color-danger-2;" text="Cancel">
               <font>
                  <Font name="DM Sans Regular" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
