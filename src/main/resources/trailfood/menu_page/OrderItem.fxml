<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="orderItemsHBox" alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white;"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu_page.OrderItemController">
   <children>
      <Label fx:id="orderQuantityLabel" style="-fx-background-color: -color-success-2;" text="Qty">
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
         <font>
            <Font name="DM Sans Regular" size="12.0" />
         </font>
      </Label>
      <VBox>
         <children>
            <Label fx:id="orderItemNameLabel" text="Name of Menu Item">
               <font>
                  <Font name="DM Sans Medium" size="12.0" />
               </font>
            </Label>
            <Label fx:id="orderPriceLabel" text="PHP 200.00" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</HBox>
